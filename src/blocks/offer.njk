<div class="p-4 xl:p-5 bg-[#EFF3F8] relative border border-[#E6EBEE] rounded-[22px] xl:rounded-[24px]">
	{# Title #}
	<div class="flex gap-1 xl:gap-[10px] text-[28px] xl:text-[36px] items-center text-[#495057] font-medium">
		<div class="">Москва</div>

		<svg class="max-xl:w-[18px]" width="19" height="14" viewBox="0 0 19 14" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M18.4404 7.32095C18.7859 6.97542 18.7859 6.41521 18.4404 6.06968L12.8097 0.438977C12.4641 0.0934487 11.9039 0.0934487 11.5584 0.438977C11.2129 0.784504 11.2129 1.34472 11.5584 1.69024L16.5635 6.69531L11.5584 11.7004C11.2129 12.0459 11.2129 12.6061 11.5584 12.9516C11.9039 13.2972 12.4641 13.2972 12.8097 12.9516L18.4404 7.32095ZM0.119141 6.69531L0.119141 7.58009L17.8147 7.58009V6.69531V5.81053L0.119141 5.81053L0.119141 6.69531Z" fill="#495057" />
		</svg>

		<div class="">Владивосток</div>
	</div>
	{# Title #}

	{# Form #}
	<div class="mt-[10px] xl:mt-5 text-[#6C757D] text-xs xl:text-lg">
		<div class="flex gap-[2px] xl:gap-1 items-center ">27 мая
			<svg class="max-xl:w-[9px]" width="14" height="12" viewBox="0 0 14 12" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M7.67756 11.9995L6.69318 11.0279L10.7457 6.97532H0.25V5.56907H10.7457L6.69318 1.5293L7.67756 0.544922L13.4048 6.2722L7.67756 11.9995Z" fill="#6C757D" />
			</svg>
			19 Июня
		</div>

		<fieldset class="mb-[10px] xl:mb-5 mt-[18px] xl:mt-5">
			<legend class="sr-only">Выберите тару</legend>
			<div class="flex flex-wrap gap-x-[10px] gap-y-1 text-[10px] xl:text-lg " role="radiogroup" aria-labelledby="tara-label">
				{% set name = 'tara' %}
				{% set values = ['20 футов', '40 футов', '70 футов'] %}
				{% for item in values %}
				{% include "src/components/radio.njk" %}
				{% endfor %}
			</div>
		</fieldset>

		<fieldset class="">
			<legend class="sr-only">Выберите тару</legend>
			<div class="flex flex-wrap gap-x-[10px] xl:gap-x-5 gap-y-[10px] xl:gap-y-5 text-[10px] xl:text-lg " role="radiogroup" aria-labelledby="tara-label">
				{% set name = 'own' %}
				{% set values = ['Своя тара', 'Тара перевозчика'] %}
				{% for item in values %}
				{% include "src/components/radio.njk" %}
				{% endfor %}
			</div>
		</fieldset>
	</div>
	{# Form #}

	{# Info #}
	<div class=" xl:absolute xl:right-5 xl:top-5 max-xl:mt-2">
		<div class="text-[#495057] font-medium text-[28px] xl:text-[36px]">от 95 000₽</div>
		<div class="mt-[10px] xl:mt-5 text-xs xl:text-lg text-[#6C757D]">ООО «ТрансГруз»</div>
	</div>
	{# Info #}

	<div class="items-center justify-between mt-5 xl:flex">



		<div class="flex justify-between w-full">
			{% set cityList = ['Москва', 'Екатеринбург', 'Новосибирск', 'Иркутск', 'Владивосток'] %}
			{% for city in cityList %}
			<div class="flex-1 group">
				<div class="relative">
					<div class="text-[10px] flex items-center justify-center text-[#495057] font-bold relative z-10 w-[18px] h-[18px] xl:text-sm bg-[#E0E7FF] rounded-full xl:w-6 xl:h-6 ">
						{{ loop.index }}
					</div>
					<div class=" w-[calc(100%+4px)] bg-[#E0E7FF] h-[3px] xl:h-[5px] absolute left-0 top-1/2 -translate-y-1/2 group-last:hidden z-0"></div>
				</div>
				<div class="text-[#6C757D] text-[10px] xl:text-base !leading-[118%] mt-[6px]">
					{{ city }}
				</div>

				
			</div>
			{% endfor %}
		</div>

		<div class="max-xl:mt-5 btn btn--blue max-xl:w-[126px] w-[252px] text-center max-xl:text-xs max-xl:rounded-xl max-xl:px-[30px] max-xl:py-3">Подробнее</div>

	</div>

</div>